{
  "info": {
    "name": "BTF Order API",
    "_postman_id": "btf-order-api-collection",
    "description": "Requests for Auth, Products, Inventory, and Orders",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000/api/v1" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/register",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Admin User\",\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role\": \"Admin\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "{{base_url}}/auth/login",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"password\"\n}"
        }
      }
    },
    {
      "name": "Products - List",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": "{{base_url}}/products"
      }
    },
    {
      "name": "Products - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/products",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Demo Product\",\n  \"description\": \"Sample description\",\n  \"base_price\": 120,\n  \"is_active\": true\n}"
        }
      }
    },
    {
      "name": "Orders - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/orders",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"items\": [\n    {\"product_id\": 1, \"variant_id\": 1, \"qty\": 1, \"price\": 120}\n  ]\n}"
        }
      }
    }
  ]
}
